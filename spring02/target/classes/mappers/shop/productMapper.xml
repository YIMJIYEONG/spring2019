<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="product">

	<select id="list_product" resultType="com.example.spring02.model.shop.dto.ProductDTO">
		SELECT *
		FROM PRODUCT
		ORDER BY PRODUCT_NAME
	</select>
	
	<select id="detail_product" parameterType="int" resultType="com.example.spring02.model.shop.dto.ProductDTO">
		SELECT *
		FROM PRODUCT
		WHERE PRODUCT_ID = #{product_id}
	</select>
	
	<insert id="insert">
		INSERT INTO PRODUCT VALUES (
			SEQ_PRODUCT.NEXTVAL
			, #{productName}
			, #{price}
			, #{description}
			, #{pictureUrl}
		)
	</insert>
	
	<update id="update_product">
		UPDATE PRODUCT
		SET PRODUCT_NAME = #{product_name}
			, PRICE = #{price}
			, DESCRIPTION = #{description}
			, PICTURE_URL = #{picture_rrl}
		WHERE PRODUCT_ID = #{product_id}
	</update>
	
	<!-- 첨부파일 이름 -->
	<select id="file_info" resultType = "String">
		SELECT PICTURE_URL
		FROM PRODUCT
		WHERE PRODUCT_ID = #{product_id}
	</select>
	
	<delete id="delete">
		DELETE PRODUCT
		WHERE PRODUCT_ID = #{product_id}
	</delete>
	
</mapper>

